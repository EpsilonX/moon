<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_fathernode_select"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/head_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:gravity="center"
        android:text="Father Title"
        android:textColor="#888888"
        android:textSize="25sp" />

    <ImageView
        android:id="@+id/node_img"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_title"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:src="@drawable/item_hr"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/head_relat1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/node_img"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:descendantFocusability="blocksDescendants"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:visibility="gone" >

        <Button
            android:id="@+id/nodelist_b1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:text="编辑"
            android:textSize="15sp"
            android:visibility="visible" />

        <Button
            android:id="@+id/nodelist_b2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="删除"
            android:textSize="15sp"
            android:visibility="visible" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/head_relat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head_relat1"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp"
        android:padding="10dp"
        android:visibility="gone" >

        <!--
             <ImageView
            android:id="@+id/head_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher" />
            
            <TextView
            android:id="@+id/head_content"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:bufferType="spannable"
            android:textSize="15sp" />
        -->

        <com.shunote.FloatImageText
            android:id="@+id/head_content"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_margin="5dp" >
        </com.shunote.FloatImageText>
    </RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:src="@drawable/item_hr" />

</RelativeLayout>